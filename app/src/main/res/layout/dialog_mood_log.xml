<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="20dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Space
            android:layout_width="300dp"
            android:layout_height="30dp" />

        <ImageButton
            android:id="@+id/closeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:background="@android:color/transparent"
            android:contentDescription="Close" />

    </LinearLayout>

    <TextView
        android:id="@+id/dialogTitle"
        android:text="Mood Log Details"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#003153"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/dialogContent"
        android:textColor="#003153"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/editMoodInput"
        android:gravity="top|start"
        android:hint="Nothing was written here :("
        android:enabled="false"
        android:textColor="#444054"
        android:backgroundTint="#444054"
        android:background="@android:color/transparent"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="300dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <Space
            android:layout_width="220dp"
            android:layout_height="30dp" />
        <Button
            android:id="@+id/editButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:backgroundTint="#444054"
            android:text="Edit log"
            android:textColor="#ffffe3"
            app:cornerRadius="10dp" />
    </LinearLayout>


</LinearLayout>
